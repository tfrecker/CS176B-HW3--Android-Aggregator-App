<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/userInfoTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="9999999"
        android:scrollbars="vertical"
        android:layout_above="@+id/FacebookLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Facebook Notifications"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

    <Button
        android:id="@+id/FacebookLogin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/FacebookReload"
        android:layout_alignLeft="@+id/FacebookReload"
        android:layout_alignRight="@+id/FacebookReload"
        android:text="@string/Facebooklogin" />

    <Button
        android:id="@+id/FacebookReload"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/userInfoTextView"
        android:layout_marginRight="22dp"
        android:text="Reload" />
    
    <Button
        android:id="@+id/TwitterLogin"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/FacebookLogin"
        android:layout_alignBottom="@+id/FacebookLogin"
        android:layout_alignLeft="@+id/TwitterReload"
        android:text="@string/Twitterlogin" />

    <Button
        android:id="@+id/TwitterReload"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userInfoTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="22dp"
        android:text="Reload" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userInfoTextView"
        android:layout_alignTop="@+id/userInfoTextView"/>

</RelativeLayout>
